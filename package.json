{
    "author": {
        "name": "Chris O'Brien"
    },
    "license": "MIT",
    "scripts": {
        "prettier:ci": "npx prettier . --check",
        "prettier:fix": "npx prettier . --write",
        "lint:ci": "npx eslint . --max-warnings=0",
        "lint:fix": "npx eslint . --fix",
        "build:ci": "npm ci && npm audit && npm run prettier:ci && npm run lint:ci",
        "build:local": "npm install && npm run prettier:fix && npm run lint:fix",
        "start": "npm run build:local && ts-node src/index.ts"
    },
    "dependencies": {
        "dotenv": "^16.0.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.43.0",
        "npm": "^9.8.0",
        "prettier": "^3.0.0",
        "ts-command-line-args": "^2.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    }
}
