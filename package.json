{
    "author": {
        "name": "Chris O'Brien"
    },
    "license": "MIT",
    "scripts": {
        "prettier:ci": "npx prettier . --check",
        "prettier:fix": "npx prettier . --write",
        "lint:ci": "npx eslint . --max-warnings=0",
        "lint:fix": "npx eslint . --fix",
        "build:ci": "npm ci && npm audit && npm run prettier:ci && npm run lint:ci",
        "build:local": "npm install && npm update --save && npm run prettier:fix && npm run lint:fix",
        "start": "npm run build:local && npm run run",
        "precommit": "npm run build:local && npm run build:ci && npm run run",
        "run": "ts-node src/index.ts"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "ts-command-line-args": "^2.5.1"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.47.0",
        "npm": "^9.8.1",
        "prettier": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}
